{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "suiperchat_streamer_app",
	"version": "0.1.0",
	"identifier": "com.suiperchat.streamer",
	"build": {
		"frontendDist": "../out",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "SUIperCHAT",
				"width": 800,
				"height": 1000,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"externalBin": ["binaries/$TARGET/loophole"]
	},
	"tauri": {
		"allowlist": {
			"http": {
				"all": false,
				"request": true,
				"scope": [
					"https://api.ipify.org/*",
					"https://ifconfig.me/*"
				]
			},
			"shell": {
				"all": false,
				"sidecar": true,
				"open": false
			}
		}
	}
}
